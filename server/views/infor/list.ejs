<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>


    <!--main content--> 
    <main class="container">
     <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title%></h1>

            <% if(typeof displayName == 'string' && displayName) { %>
            <a href="/infor/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i>Add a contact
            </a>
            <%}%>
            <br>
            <table class="table table-boardered table-striped table-hover">
                <!-- Header Row-->
                <tr>
                    <th class="text-center col-2">Name</th>
                    <th class="text-center col-2">Contact Number</th>
                    <th class="text-center col-2">Email</th>
                    <% if(typeof displayName == 'string' && displayName) { %>
                      <th class="text-center col-2" ></th>
                      <th class="text-center col-2" ></th>
                    <%}%>

                </tr>
                <!--Repeatable Template Row-->
                <% for(let count = 0; count <InforList.length; count++){%>
                    <tr>
                        <td class="text-center col-2"><%=InforList[count].name%></td>
                        <td class="text-center col-2"><%=InforList[count].contactNumber%></td>
                        <td class="text-center col-2"><%=InforList[count].email%></td>

                        <% if(typeof displayName == 'string' && displayName) { %>
                        <td class="text-center col-2" >
                            <a href="/infor/edit/<%= InforList[count]._id%>" class = "btn btn-primary">
                            <i class="fas fa-pencil alt"></i>Edit
                            </a>

                        </td>
                        <td class="text-center col-2" >
                            <a href="/infor/delete/<%= InforList[count]._id%>" class = "btn btn-danger">
                                <i class="fas fa-trash alt"></i>Delete
                            </a>


                        </td>
                        <%}%>
                    </tr>
                <%}%> 

            </table>

  
            
                
                
                
        </div>
     </div> 
          
   
    </main>

    <%- include ../partials/bottom_nav.ejs %>
    <%- include ../partials/footer.ejs %>   
    
    
    

